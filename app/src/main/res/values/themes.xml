<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme. -->
    <style name="Theme.AndrAutoTestApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/primary_text</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>
    
    <!-- 启动页专用主题，隐藏ActionBar -->
    <style name="Theme.AndrAutoTestApp.Splash" parent="Theme.AndrAutoTestApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <!-- 启动页进度条样式 -->
    <style name="SplashProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/splash_progress_drawable</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressTint">@color/splash_progress_color</item>
        <item name="android:progressBackgroundTint">@color/splash_progress_background</item>
    </style>
    
    <!-- 登录输入框主题 -->
    <style name="LoginInputTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/login_button_gradient_start</item>
        <item name="colorOnSurface">@color/login_input_text</item>
        <item name="android:textColorHint">@color/login_input_hint</item>
    </style>
    
    <!-- 自定义登录按钮样式 -->
    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
</resources> 